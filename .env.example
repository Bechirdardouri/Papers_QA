# Papers QA Environment Configuration
# Copy this to .env and adjust values as needed

# Environment
ENVIRONMENT=production
DEBUG=false
SEED=42
LOG_LEVEL=INFO

# Model Configuration
MODEL__EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
MODEL__EMBEDDING_DEVICE=cuda
MODEL__EMBEDDING_BATCH_SIZE=32
MODEL__GENERATION_MODEL=mistralai/Mistral-7B-Instruct-v0.1
MODEL__GENERATION_DEVICE=cuda
MODEL__GENERATION_MAX_LENGTH=512
MODEL__GENERATION_TEMPERATURE=0.7
MODEL__GENERATION_TOP_P=0.95
MODEL__ENABLE_QUANTIZATION=true

# Data Configuration
DATA__INPUT_DIR=./data/raw
DATA__OUTPUT_DIR=./data/generated
DATA__CACHE_DIR=./data/cache
DATA__MAX_DOC_LENGTH=4096
DATA__CHUNK_SIZE=512
DATA__CHUNK_OVERLAP=50

# Retrieval Configuration
RETRIEVAL__INDEX_TYPE=faiss_flat
RETRIEVAL__NUM_NEIGHBORS=5
RETRIEVAL__SIMILARITY_THRESHOLD=0.5
RETRIEVAL__USE_CACHE=true

# Generation Configuration
GENERATION__BATCH_SIZE=4
GENERATION__NUM_QUESTIONS_PER_PASSAGE=3
GENERATION__API_KEY=your_api_key_here
GENERATION__API_BASE=https://api.openai.com/v1
GENERATION__TIMEOUT=30
GENERATION__MAX_RETRIES=3

# Evaluation Configuration
EVALUATION__COMPUTE_BLEU=true
EVALUATION__COMPUTE_ROUGE=true
EVALUATION__COMPUTE_SEMANTIC_SIMILARITY=true
EVALUATION__COMPUTE_RETRIEVAL_ACCURACY=true

# Logging
LOG_FILE=./logs/papersqa.log
